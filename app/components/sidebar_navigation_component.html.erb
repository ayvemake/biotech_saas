<div class="fixed left-0 top-16 h-full w-64 bg-white shadow-lg">
  <nav class="mt-5 px-2">
    <div class="space-y-1">
      <% navigation_items.each do |item| %>
        <%= link_to item[:path], 
            class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md #{item[:active] ? 'bg-blue-100 text-blue-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
          <i class="fas <%= item[:icon] %> mr-3 flex-shrink-0 h-6 w-6 <%= item[:active] ? 'text-blue-500' : 'text-gray-400 group-hover:text-gray-500' %>"></i>
          <%= item[:title] %>
        <% end %>
      <% end %>
    </div>
  </nav>
</div> 