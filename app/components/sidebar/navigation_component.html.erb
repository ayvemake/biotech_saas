<div class="fixed left-0 top-16 h-full w-64 bg-white shadow-lg flex flex-col">
  <!-- Quick Access Grid -->
  <div class="p-4">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">
      Quick Access
    </h3>
    <div class="grid grid-cols-2 gap-3">
      <% quick_access_items.each do |item| %>
        <%= link_to item[:path], class: "flex flex-col items-center p-3 rounded-lg #{item[:color]} text-white hover:opacity-90 transition-opacity" do %>
          <i class="fas <%= item[:icon] %> text-xl mb-2"></i>
          <span class="text-xs font-medium"><%= item[:title] %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="flex-grow px-2 mt-2 border-t border-gray-200 pt-4">
    <div class="space-y-1">
      <% navigation_items.each do |item| %>
        <%= link_to item[:path], 
            class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md #{item[:active] ? 'bg-blue-100 text-blue-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
          <i class="fas <%= item[:icon] %> mr-3 flex-shrink-0 h-6 w-6 <%= item[:active] ? 'text-blue-500' : 'text-gray-400 group-hover:text-gray-500' %>"></i>
          <%= item[:title] %>
        <% end %>
      <% end %>
    </div>
  </nav>
</div> 