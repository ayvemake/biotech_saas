<%= form_with(model: [@stock_category, @stock_item], class: "form") do |f| %>
  <% if @stock_item.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@stock_item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @stock_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :reference %>
    <%= f.text_field :reference, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :minimum_quantity %>
    <%= f.number_field :minimum_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_quantity %>
    <%= f.number_field :current_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :unit %>
    <%= f.text_field :unit, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expiry_date %>
    <%= f.date_field :expiry_date, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "button primary" %>
    <%= link_to "Cancel", stock_category_path(@stock_category), class: "button" %>
  </div>
<% end %> 