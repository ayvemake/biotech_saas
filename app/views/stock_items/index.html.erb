<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">Inventory</h1>
      <%= link_to new_stock_item_path, class: "btn-primary" do %>
        <i class="fas fa-plus mr-2"></i>
        Add Item
      <% end %>
    </div>

    <div class="mt-8">
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Name</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Reference</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Category</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Quantity</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Location</th>
              <th class="px-6 py-3 text-right text-sm font-semibold text-gray-900">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @stock_items.each do |item| %>
              <tr>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= link_to item.name, stock_item_path(item), class: "hover:text-blue-600" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= item.reference %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= item.stock_category&.name %></td>
                <td class="px-6 py-4 text-sm">
                  <span class="<%= quantity_status_color(item) %>">
                    <%= item.current_quantity %> <%= item.unit %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= item.location %></td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <%= link_to edit_stock_item_path(item), class: "text-blue-600 hover:text-blue-900" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 