<%= form_with(model: [@stock_item, @stock_batch], class: "form") do |f| %>
  <% if @stock_batch.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@stock_batch.errors.count, "error") %> prohibited this batch from being saved:</h2>
      <ul>
        <% @stock_batch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :number, "Batch Number" %>
    <%= f.text_field :number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :received_date %>
    <%= f.date_field :received_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expiry_date %>
    <%= f.date_field :expiry_date, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "button primary" %>
    <%= link_to "Cancel", stock_item_path(@stock_item), class: "button" %>
  </div>
<% end %> 