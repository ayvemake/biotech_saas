<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">Stock Batches</h1>
    </div>

    <div class="mt-8">
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Number</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Item</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Quantity</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Received</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Expires</th>
              <th class="px-6 py-3 text-right text-sm font-semibold text-gray-900">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @stock_batches.each do |batch| %>
              <tr>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= batch.number %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= link_to batch.stock_item.name, stock_item_path(batch.stock_item), class: "hover:text-blue-600" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= batch.quantity %> <%= batch.stock_item.unit %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= batch.received_date&.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= batch.expiry_date&.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <%= link_to edit_stock_batch_path(batch), class: "text-blue-600 hover:text-blue-900" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 