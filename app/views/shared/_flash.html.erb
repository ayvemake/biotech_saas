<div class="fixed top-4 right-4 z-50 space-y-4 min-w-[320px]">
  <% if notice %>
    <div class="rounded-lg bg-green-50 p-4 shadow-lg ring-1 ring-green-500/10 transition-all duration-300">
      <div class="flex items-center gap-3">
        <i class="fas fa-check-circle text-green-400 text-lg"></i>
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="rounded-lg bg-red-50 p-4 shadow-lg ring-1 ring-red-500/10 transition-all duration-300">
      <div class="flex items-center gap-3">
        <i class="fas fa-exclamation-circle text-red-400 text-lg"></i>
        <p class="text-sm font-medium text-red-800"><%= alert %></p>
      </div>
    </div>
  <% end %>
</div> 