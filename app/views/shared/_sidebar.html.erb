<div class="hidden lg:fixed lg:inset-y-0 lg:flex lg:w-80 lg:flex-col">
  <div class="flex min-h-0 flex-1 flex-col bg-gradient-to-b from-blue-50 to-blue-100">
    <div class="flex h-16 items-center justify-center border-b border-blue-200/50 backdrop-blur-sm">
      <%= link_to dashboard_path, class: "flex items-center" do %>
        <i class="fas fa-flask text-blue-600 text-3xl mr-3"></i>
        <span class="text-gray-900 text-2xl font-light tracking-wide">LabManager</span>
      <% end %>
    </div>

    <div class="flex flex-1 flex-col overflow-y-auto">
      <nav class="flex-1 space-y-3 px-6 py-8">
        <div class="grid grid-cols-1 gap-3">
          <%= link_to dashboard_path,
              class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                     #{current_page?(dashboard_path) ? 'bg-white text-blue-600 shadow-lg' : 'text-gray-700 hover:bg-white hover:shadow-md'}
                     backdrop-blur-sm border border-blue-200/50" do %>
            <i class="fas fa-chart-line mr-4 flex-shrink-0 h-6 w-6 #{current_page?(dashboard_path) ? 'text-blue-600' : 'text-gray-700'}"></i>
            Dashboard
            <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
          <% end %>

          <%= link_to patients_path,
              class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                     #{controller_name == 'patients' ? 'bg-white text-blue-600 shadow-lg' : 'text-gray-700 hover:bg-white hover:shadow-md'}
                     backdrop-blur-sm border border-blue-200/50" do %>
            <i class="fas fa-users mr-4 flex-shrink-0 h-6 w-6 #{controller_name == 'patients' ? 'text-blue-600' : 'text-gray-700'}"></i>
            Patients
            <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
          <% end %>

          <%= link_to stock_items_path,
              class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                     #{controller_name == 'stock_items' ? 'bg-white text-blue-600 shadow-lg' : 'text-gray-700 hover:bg-white hover:shadow-md'}
                     backdrop-blur-sm border border-blue-200/50" do %>
            <i class="fas fa-boxes mr-4 flex-shrink-0 h-6 w-6 #{controller_name == 'stock_items' ? 'text-blue-600' : 'text-gray-700'}"></i>
            Stock
            <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
          <% end %>

          <%= link_to analyses_path,
              class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                     #{controller_name == 'analyses' ? 'bg-white text-blue-600 shadow-lg' : 'text-gray-700 hover:bg-white hover:shadow-md'}
                     backdrop-blur-sm border border-blue-200/50" do %>
            <i class="fas fa-vial mr-4 flex-shrink-0 h-6 w-6 #{controller_name == 'analyses' ? 'text-blue-600' : 'text-gray-700'}"></i>
            Analyses
            <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
          <% end %>

          <%= link_to "#",
              class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                     text-gray-700 hover:bg-white hover:shadow-md backdrop-blur-sm border border-blue-200/50" do %>
            <i class="fas fa-tasks mr-4 flex-shrink-0 h-6 w-6 text-gray-700"></i>
            Tasks
            <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
          <% end %>

          <% if current_user&.admin? %>
            <%= link_to admin_users_path,
                class: "group relative flex items-center px-4 py-3 text-base font-medium rounded-xl transition-all duration-200
                       #{controller_name == 'users' ? 'bg-white text-blue-600 shadow-lg' : 'text-gray-700 hover:bg-white hover:shadow-md'}
                       backdrop-blur-sm border border-blue-200/50" do %>
              <i class="fas fa-cog mr-4 flex-shrink-0 h-6 w-6 #{controller_name == 'users' ? 'text-blue-600' : 'text-gray-700'}"></i>
              Settings
              <span class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
            <% end %>
          <% end %>
        </div>
      </nav>
    </div>

    <div class="border-t border-blue-200/50 p-6 backdrop-blur-sm">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="rounded-xl bg-white p-2 border border-blue-200/50 shadow-sm">
            <i class="fas fa-user text-blue-600 text-xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= current_user.full_name %></p>
            <p class="text-xs text-gray-600"><%= current_user.email %></p>
          </div>
        </div>
        <%= button_to destroy_user_session_path,
            method: :delete,
            class: "ml-4 text-gray-600 hover:text-blue-600 transition-colors duration-200 rounded-xl p-2 hover:bg-white" do %>
          <i class="fas fa-sign-out-alt text-xl"></i>
        <% end %>
      </div>
    </div>
  </div>
</div> 