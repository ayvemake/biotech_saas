<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center border-b border-gray-200 pb-5 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
        <i class="fas fa-vial text-blue-500"></i>
        New Blood Sample
      </h1>
      <p class="mt-2 text-gray-600">Patient: <%= @patient.full_name %></p>
    </div>
    <%= link_to patient_blood_samples_path(@patient), class: "text-gray-500 hover:text-gray-700" do %>
      <i class="fas fa-arrow-left mr-1"></i>
      Back to Samples
    <% end %>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <div class="h-20 w-20 bg-blue-100 rounded-full mx-auto flex items-center justify-center">
          <i class="fas fa-vial text-blue-500 text-3xl"></i>
        </div>
        <h2 class="mt-4 text-lg font-medium text-gray-900">Confirm Sample Collection</h2>
        <p class="mt-1 text-sm text-gray-500">
          This will create a new blood sample and initialize the required processes.
        </p>
      </div>

      <%= form_with(model: [@patient, @blood_sample], class: "space-y-6") do |f| %>
        <div class="flex justify-center">
          <%= f.submit "Create Sample", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 