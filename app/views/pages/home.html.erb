<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-4xl font-bold text-center text-gray-900 mb-12">
    Laboratory Management System
  </h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <%= link_to patients_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-user-injured"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Patient Management</h2>
        <p class="text-gray-600">Medical records, appointments, test results, and sample tracking</p>
      </div>
    <% end %>

    <%= link_to stocks_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-box"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Stock Management</h2>
        <p class="text-gray-600">Reagents, consumables, inventory, and batch tracking</p>
      </div>
    <% end %>

    <%= link_to analyses_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-flask"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Analysis Management</h2>
        <p class="text-gray-600">Test catalog, protocols, results, and quality control</p>
      </div>
    <% end %>

    <%= link_to staff_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-users"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Staff Management</h2>
        <p class="text-gray-600">Planning, skills, training, and certifications</p>
      </div>
    <% end %>

    <%= link_to documents_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-file-alt"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Document Management</h2>
        <p class="text-gray-600">Procedures, protocols, quality docs, and archives</p>
      </div>
    <% end %>

    <%= link_to quality_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-check-circle"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Quality Management</h2>
        <p class="text-gray-600">Non-conformities, corrective actions, and audits</p>
      </div>
    <% end %>

    <%= link_to equipment_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-tools"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Equipment Management</h2>
        <p class="text-gray-600">Maintenance, calibration, and usage planning</p>
      </div>
    <% end %>

    <%= link_to finance_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-euro-sign"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Financial Management</h2>
        <p class="text-gray-600">Billing, quotes, costs, and supplier management</p>
      </div>
    <% end %>

    <%= link_to statistics_index_path, class: "transform hover:-translate-y-1 transition-all duration-300" do %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl">
        <div class="text-4xl text-blue-500 mb-4">
          <i class="fas fa-chart-bar"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Statistics & Reports</h2>
        <p class="text-gray-600">Activity tracking, performance, and dashboards</p>
      </div>
    <% end %>
  </div>
</div>
