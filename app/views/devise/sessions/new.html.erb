<div class="text-center mb-8">
  <i class="fas fa-flask text-blue-600 text-5xl"></i>
  <h2 class="mt-4 text-3xl font-bold text-gray-900">LabManager</h2>
  <p class="mt-2 text-lg text-gray-600">Efficient Laboratory Management</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-base font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-lg" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-base font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password",
        class: "mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-lg" %>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 text-base text-gray-600" %>
    </div>
    <%= link_to "Forgot password?", new_password_path(resource_name),
        class: "text-base font-medium text-blue-600 hover:text-blue-500" %>
  </div>

  <%= f.submit "Sign in",
      class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
<% end %>
